    <script>
        document.addEventListener('DOMContentLoaded', () => {

            // --- ç²’å­åŠ¨ç”»è„šæœ¬ ---
            const canvas = document.getElementById('particleCanvas');
            const ctx = canvas.getContext('2d');
            let particlesArray = [];

            // è®¾ç½®ç”»å¸ƒå°ºå¯¸
            const resizeCanvas = () => {
                canvas.width = window.innerWidth;
                canvas.height = window.innerHeight;
            };
            resizeCanvas();

            window.addEventListener('resize', resizeCanvas);

            // ç²’å­ç±»
            class Particle {
                constructor() {
                    this.x = Math.random() * canvas.width;
                    this.y = Math.random() * canvas.height;
                    this.size = Math.random() * 2 + 1;
                    this.speedX = Math.random() * 1 - 0.5;
                    this.speedY = Math.random() * 1 - 0.5;
                }
                update() {
                    if (this.x > canvas.width || this.x < 0) this.speedX = -this.speedX;
                    if (this.y > canvas.height || this.y < 0) this.speedY = -this.speedY;
                    this.x += this.speedX;
                    this.y += this.speedY;
                }
                draw() {
                    ctx.fillStyle = 'rgba(255, 255, 255, 0.5)';
                    ctx.beginPath();
                    ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                    ctx.fill();
                }
            }
            
            // åˆå§‹åŒ–ç²’å­
            const initParticles = () => {
                particlesArray = [];
                const numberOfParticles = (canvas.width * canvas.height) / 9000;
                for (let i = 0; i < numberOfParticles; i++) {
                    particlesArray.push(new Particle());
                }
            };
            initParticles();

            // åŠ¨ç”»å¾ªç¯
            const animateParticles = () => {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                for (let i = 0; i < particlesArray.length; i++) {
                    particlesArray[i].update();
                    particlesArray[i].draw();
                }
                requestAnimationFrame(animateParticles);
            };
            animateParticles();
            // --- ç²’å­åŠ¨ç”»è„šæœ¬ç»“æŸ ---


            // --- å¯¼èˆªç«™æ ¸å¿ƒè„šæœ¬ ---
            const sitesData = [
                { category: 'AI å·¥å…·', title: 'ChatGPT', url: 'https://chat.openai.com/', description: 'OpenAI å‡ºå“çš„å¼ºå¤§é€šç”¨è¯­è¨€æ¨¡å‹ã€‚' },
                { category: 'AI å·¥å…·', title: 'Midjourney', url: 'https://www.midjourney.com/', description: 'ä¸€ä¸ªä¼˜ç§€çš„ AI ç»˜ç”»å’Œå›¾åƒç”ŸæˆæœåŠ¡ã€‚' },
                { category: 'å®è—ç½‘ç«™', title: 'Product Hunt', url: 'https://www.producthunt.com/', description: 'å‘ç°æœ€æ–°æœ€é…·çš„äº’è”ç½‘äº§å“ã€‚' },
                { category: 'å›¾ç‰‡ä¸è§†é¢‘', title: 'Pexels', url: 'https://www.pexels.com/', description: 'æä¾›æµ·é‡å…è´¹å¯å•†ç”¨çš„é«˜æ¸…å›¾ç‰‡ã€‚' },
                { category: 'è®¾è®¡ä¸åˆ›æ„', title: 'Figma', url: 'https://www.figma.com/', description: 'ä¸€ä¸ªåŸºäºäº‘ç«¯çš„åä½œå¼ UI è®¾è®¡å·¥å…·ã€‚' },
                { category: 'ç¼–ç¨‹ä¸å¼€å‘', title: 'GitHub', url: 'https://github.com/', description: 'é¢å‘å¼€æºåŠç§æœ‰è½¯ä»¶é¡¹ç›®çš„æ‰˜ç®¡å¹³å°ã€‚' },
            ];

            const searchInput = document.getElementById('searchInput');
            const categoryTabsContainer = document.getElementById('categoryTabs');
            const sitesGrid = document.getElementById('sitesGrid');
            const noResultsDiv = document.getElementById('noResults');

            let currentCategory = 'å…¨éƒ¨';
            let currentSearchTerm = '';

            const renderCards = (sites) => {
                sitesGrid.innerHTML = ''; 
                if (sites.length === 0) {
                    noResultsDiv.classList.remove('hidden');
                } else {
                    noResultsDiv.classList.add('hidden');
                }
                sites.forEach(site => {
                    const domain = new URL(site.url).hostname;
                    const iconUrl = `https://www.google.com/s2/favicons?domain=${domain}&sz=64`;
                    const fallbackIcon = site.title.charAt(0).toUpperCase();

                    const card = `
                        <a href="${site.url}" target="_blank" rel="noopener noreferrer" class="site-card block p-4">
                            <div class="flex items-center mb-3">
                                <img src="${iconUrl}" 
                                     alt="${site.title} icon" 
                                     class="w-8 h-8 rounded-md mr-3 bg-gray-700/50 object-contain"
                                     onerror="this.onerror=null; this.replaceWith(document.createElement('div')).innerHTML='<div class=\\'w-8 h-8 rounded-md mr-3 bg-gray-700/50 flex items-center justify-center font-bold text-lg\\'>${fallbackIcon}</div>'">
                                <h3 class="text-white font-semibold truncate">${site.title}</h3>
                            </div>
                            <p class="text-gray-400 text-sm h-10 overflow-hidden">${site.description}</p>
                        </a>
                    `;
                    sitesGrid.innerHTML += card;
                });
            };

            const renderCategories = () => {
                const categories = ['å…¨éƒ¨', ...new Set(sitesData.map(s => s.category))];
                categoryTabsContainer.innerHTML = '';
                categories.forEach(category => {
                    const isActive = category === currentCategory;
                    const button = document.createElement('button');
                    button.textContent = category;
                    button.dataset.category = category;
                    button.className = `px-4 py-2 text-sm font-medium rounded-full transition-colors duration-200 ${
                        isActive 
                        ? 'bg-blue-600 text-white shadow-md' 
                        : 'bg-transparent text-gray-300 hover:bg-white/10'
                    }`;
                    categoryTabsContainer.appendChild(button);
                });
            };

            const filterAndRender = () => {
                let filteredSites = sitesData;
                if (currentCategory !== 'å…¨éƒ¨') {
                    filteredSites = sitesData.filter(site => site.category === currentCategory);
                }
                if (currentSearchTerm) {
                    const lowerCaseSearchTerm = currentSearchTerm.toLowerCase();
                    filteredSites = filteredSites.filter(site => 
                        site.title.toLowerCase().includes(lowerCaseSearchTerm) || 
                        site.description.toLowerCase().includes(lowerCaseSearchTerm)
                    );
                }
                renderCards(filteredSites);
            };

            searchInput.addEventListener('input', (e) => {
                currentSearchTerm = e.target.value.trim();
                filterAndRender();
            });

            categoryTabsContainer.addEventListener('click', (e) => {
                if (e.target.tagName === 'BUTTON') {
                    currentCategory = e.target.dataset.category;
                    renderCategories();
                    filterAndRender();
                }
            });
            
            renderCategories();
            filterAndRender();
        });
    </script>
</body>
